{
    "name": "parsampsh/adminx",
    "description": "Adminx is a library to create automatic admin panel for Laravel web applications",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/parsampsh/adminx",
    "authors": [
        {
            "name": "parsa mpsh",
            "email": "parsampsh@gmail.com",
            "homepage": "https://github.com/parsampsh"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "laravel/framework": "^8.0",
        "friendsofphp/php-cs-fixer": "^2.17"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "Adminx\\": "src/Adminx"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Adminx\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Adminx\\AdminxServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "php vendor/bin/phpunit",
        "format": "PHP_CS_FIXER_IGNORE_ENV=1 php vendor/bin/php-cs-fixer fix --allow-risky=yes src && PHP_CS_FIXER_IGNORE_ENV=1 php vendor/bin/php-cs-fixer fix --allow-risky=yes tests"
    }
}
